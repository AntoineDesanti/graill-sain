<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/page_profil"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/photo_commerce"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@mipmap/commercant" />

    <TextView
        android:id="@+id/nom_commerce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:text="Chez Michel"/>

    <TextView
        android:id="@+id/adresse_commerce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="18 avenue de la Marine, 06600 Antibes"/>

    <ListView
        android:id="@+id/list_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</LinearLayout>